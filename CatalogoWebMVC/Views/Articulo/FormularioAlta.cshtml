@model ArticuloViewModel
@{
    ViewData["Title"] = "Alta Articulo";
}

<h1>Formulario Alta Articulo</h1>
<hr/>

<div class="row">
    <div class="col-6">
        <form asp-action="FormularioAlta">
            <div class="form-group mb-3">
                <input asp-for="Id" type="hidden" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Codigo" class="form-label"></label>
                <input asp-for="Codigo" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <input asp-for="Descripcion" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdMarca" class="form-label"></label>
                <select asp-for="IdMarca" asp-items="Model.Marca" class="form-select"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdCategoria" class="form-label"></label>
                <select asp-for="IdCategoria" asp-items="Model.Categoria" class="form-select"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImagenUrl" class="form-label"></label>
                <input asp-for="ImagenUrl" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control" />
            </div>
           
            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>