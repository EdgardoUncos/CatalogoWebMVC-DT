
@model ArticuloViewModel
@{
    ViewData["Title"] = "Detalle Articulo";
}

<h1>Detalle Articulo</h1>

<div class="container">
    <div class="row">
        <div class="col-6">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Codigo" class="form-label">Codigo</label>
                <input type="text" asp-for="Codigo" class="form-control" disabled="true" />
            </div>
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input type="text" asp-for="Nombre" class="form-control" disabled="true" />
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripcion</label>
                <input type="text" asp-for="Descripcion" class="form-control" disabled="true" />
            </div>
            <div class="mb-3">
                <label asp-for="IdCategoria" class="form-label">Categorioa</label>
                <select asp-for="IdCategoria" asp-items="Model.Categoria" class="form-select" disabled="true"></select>
            </div>
            <div class="mb-3">
                <label asp-for="IdMarca" class="form-label">Marca</label>
                <select asp-for="IdMarca" asp-items="Model.Marca" class="form-select" disabled="true"></select>
            </div>
           
            <div class="mb-3">
                <label asp-for="Precio" class="form-label">Precio</label>
                <input type="text" asp-for="Precio" class="form-control" disabled="true" />
            </div>
        </div>
        <div class="col-6">
            
            <div class="mb-3">
                <label asp-for="ImagenUrl" class="form-label">Url</label>
                <input type="text" asp-for="ImagenUrl" class="form-control" disabled="true" />
            </div>
            <div class="mb-3">
                <img class="img-fluid" src="@Model.ImagenUrl" style="width: 300px; object-fit: contain;" />
            </div>

        </div>
    </div>
</div>